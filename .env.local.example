# =======================================================
# UPSC IAS LEARNING PLATFORM - ENVIRONMENT VARIABLES
# =======================================================
# Copy this file to .env.local and fill in your values
# Never commit actual credentials to version control

# =======================================================
# DATABASE CONFIGURATION
# =======================================================
# Supabase PostgreSQL connection string
# Format: postgresql://postgres:YOUR_PASSWORD@YOUR_PROJECT_REF.supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_PROJECT_REF.supabase.co:5432/postgres"

# =======================================================
# NEXTAUTH CONFIGURATION
# =======================================================
# Generate a strong secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-min-32-chars"

# Your application URL (use localhost for development)
NEXTAUTH_URL="http://localhost:3000"

# =======================================================
# GOOGLE OAUTH CREDENTIALS
# =======================================================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =======================================================
# PAYMENT GATEWAY CREDENTIALS
# =======================================================
# Razorpay (for Indian payments)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Stripe (for international payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =======================================================
# AWS S3 CONFIGURATION (for content storage)
# =======================================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="ap-south-1"

# =======================================================
# EMAIL SERVICE (for notifications)
# =======================================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# SendGrid (alternative email service)
SENDGRID_API_KEY="SG.your-sendgrid-api-key"

# =======================================================
# REDIS CONFIGURATION (for caching and sessions)
# =======================================================
REDIS_URL="redis://localhost:6379"

# =======================================================
# JWT CONFIGURATION
# =======================================================
# Generate a strong JWT secret: openssl rand -hex 64
JWT_SECRET="your-super-secure-jwt-secret-should-be-very-long"

# =======================================================
# APPLICATION CONFIGURATION
# =======================================================
# Environment: development, staging, production
NODE_ENV="development"

# Application name and version
APP_NAME="UPSC IAS Learning Platform"
APP_VERSION="1.0.0"

# =======================================================
# SECURITY CONFIGURATION
# =======================================================
# Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Password requirements
PASSWORD_MIN_LENGTH="8"
PASSWORD_REQUIRE_SPECIAL="true"

# =======================================================
# LOGGING AND MONITORING
# =======================================================
# Log level: debug, info, warn, error
LOG_LEVEL="info"

# Sentry DSN for error tracking
SENTRY_DSN="your-sentry-dsn-url"

# =======================================================
# EXTERNAL API KEYS (for content and data)
# =======================================================
# News API for current affairs
NEWS_API_KEY="your-news-api-key"

# OpenAI API key (if using AI features)
OPENAI_API_KEY="sk-your-openai-api-key"